<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_navigation_graph"
    app:moduleName="note"
    app:startDestination="@+id/note_fragment">

    <journey android:id="@+id/exit" />

    <fragment
        android:id="@+id/note_fragment"
        android:name="com.example.note.presentation.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note">
        <argument
            android:name="query_value"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <action
        android:id="@+id/action_exit"
        app:destination="@id/exit"
        app:popUpTo="@id/exit"
        app:popUpToInclusive="true"/>
</navigation>