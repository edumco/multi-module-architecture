<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.app.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_homeNav"
            app:destination="@id/homeNav" />
        <action
            android:id="@+id/action_mainFragment_to_loginNav"
            app:destination="@id/loginNav" />
    </fragment>

    <include-dynamic
        android:id="@+id/homeNav"
        app:graphPackage="${applicationId}.home"
        app:graphResName="home_nav_graph"
        app:moduleName="home" />

    <include-dynamic
        android:id="@+id/loginNav"
        app:graphPackage="${applicationId}.login"
        app:graphResName="home_nav_graph"
        app:moduleName="home" />

</navigation>