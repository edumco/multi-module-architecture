<?xml version="1.0" encoding="utf-8"?><!--
  https://github.com/android/app-bundle-samples/blob/main/DynamicFeatureNavigation/XML/app/src/main/res/navigation/nav_graph.xml
  https://developer.android.com/guide/navigation/navigation-dynamic
  https://developer.android.com/guide/navigation/navigation-deep-link
  -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation_graph"
    app:startDestination="@id/navigation_launcher">

    <launcher
        android:id="@+id/navigation_launcher"
        android:name="com.example.journey.NavigationLauncher"
        app:graph="@navigation/app_navigation_graph">
        <argument
            android:name="destination_id"
            app:argType="reference" />
    </launcher>

    <action
        android:id="@+id/action_show_error"
        app:destination="@id/splash">
        <argument
            android:name="error_message"
            app:argType="string" />
    </action>
    <dialog
        android:id="@+id/error_dialog"
        android:name="com.example.app.ErrorDialog"
        android:label="Error">
        <argument
            android:name="error_message"
            app:argType="string" />
    </dialog>

    <fragment
        android:id="@+id/splash"
        android:name="com.example.app.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_login"
            app:destination="@id/login_navigation" />
    </fragment>

    <activity
        android:id="@+id/login_navigation"
        android:name="com.example.login.LoginNavigationActivity"
        android:label="LoginNavigationActivity"
        app:moduleName="login">
        <deepLink
            android:id="@+id/deep_link"
            app:uri="myapp://login" />
        <argument
            android:name="tracking"
            android:defaultValue="@null"
            app:argType="com.example.journey.login.tracking.LoginTracking"
            app:nullable="true" />
    </activity>
    <dialog
        android:id="@+id/reauthentication"
        android:name="com.example.login.presentation.reauthentication.ReauthenticationDialog"
        android:label="reauthentication"
        app:moduleName="login"
        tools:layout="@layout/reauthentication_dialog">
        <argument
            android:name="didFinishDirection"
            android:defaultValue="@null"
            app:argType="com.core.extensions.Direction"
            app:nullable="true" />
    </dialog>

    <activity
        android:id="@+id/home_navigation"
        android:name="com.example.home.HomeNavigationActivity"
        android:label="HomeNavigationActivity"
        app:moduleName="home">
        <deepLink
            android:id="@+id/deep_link"
            app:uri="myapp://home" />
    </activity>
    <activity
        android:id="@+id/profile_navigation"
        android:name="com.example.profile.ProfileNavigationActivity"
        android:label="ProfileNavigationActivity"
        app:moduleName="profile">
        <deepLink
            android:id="@+id/deep_link"
            app:uri="myapp://profile" />
    </activity>
</navigation>