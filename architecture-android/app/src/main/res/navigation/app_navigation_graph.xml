<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.app.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />

    <action
        android:id="@+id/action_login"
        app:destination="@id/login_launcher">
        <argument
            android:name="login_custom_dependencies"
            android:defaultValue="@null"
            app:argType="com.example.journey.login.LoginCustomDependencies"
            app:nullable="true" />
    </action>

    <dialog
        android:id="@+id/navigation_launcher"
        android:name="com.example.journey.NavigationLauncher"
        android:label="Launcher">
        <argument
            android:name="login_custom_dependencies"
            android:defaultValue="@null"
            app:argType="com.example.journey.login.LoginCustomDependencies"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/login_launcher"
        android:name="com.example.login.LoginNavigationLauncher"
        android:label="LoginLauncher"
        app:moduleName="login">
        <argument
            android:name="login_custom_dependencies"
            android:defaultValue="@null"
            app:argType="com.example.journey.login.LoginCustomDependencies"
            app:nullable="true" />
        <deepLink
            android:id="@+id/deep_link"
            app:uri="myapp://login" />
